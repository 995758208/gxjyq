
.kong{
  width: 100%;
  height: 0.5rem;
  background-color: #efefef;
}
.goods-server{
  margin-top: 0.5rem;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 6rem;
  background-color: #fff;
}
.goods-server:nth-child(1){
  margin-top: 0rem;
}
.server-left{
  width: 78%;
  height: 5rem;
}
.server-right{
  margin-top: 30rpx;
  width: 22%;
  height: 5rem;
}
.server-left-top{
  width: 100%;
  height: 1.5rem;
}
.name2{
  float: left;
  padding-left: 0.5rem;
  display: block;
  width: 30%;
  height: 1.5rem;
  line-height: 1.5rem;
  font-size: 1rem;
}
.time{
  float: left;
  width: 60%;
  display: block;
  height: 1.5rem;
  font-size: 0.6rem;
  line-height: 1.8rem;
  color:#242424; 
}
.description2{
  padding-left: 0.5rem;
  display: block;
  width: 100%;
  height: 2rem;
  font-size: 0.8rem;
  line-height: 2rem;
  /* 文本不超过一行 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.Honest2{
  padding-left: 0.5rem;
  display: block;
  width: 100%;
  height: 1.5rem;
  font-size: 0.7rem;
  line-height: 1.5rem;
}
.see2{
  padding-right: 0.5rem;
  float: right;
  display: block;
  width: 100%;
  height: 1rem;
  line-height: 1rem;
  font-size: 0.8rem;
  text-align: right;
}
.btn1{
  width: 85%;
  height: 2rem;
  line-height: 2rem;
  margin-top: 0.5rem;
  margin-right: 1rem;
}

