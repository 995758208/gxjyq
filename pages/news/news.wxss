.container{
  padding: 0;
  margin: 0;
  background-color: #efefef;
}
.new-nav{
  display: inline-flex;
  flex-wrap: wrap;
  width: 100%;
  height: 4rem;
  font-size: 1rem;
  text-align: center;
  background-color: #fff;
}
.new-title{
  padding-left: 0.5rem;
  width: 80%;
  height: 2rem;
  line-height: 2rem;
  text-align: left;
  font-size: 1rem;
  font-weight: bold;
}
.new-smalltitle{
  padding-left: 0.5rem;
  width: 80%;
  height: 1rem;
  line-height: 1rem;
  text-align: left;
  font-size: 0.7rem;
  font-weight: bold;
}
.new-add{
  position: absolute;
  right: 0;
  top: 0;
  width: 15%;
  height: 3rem;
}
.new-add image{
  margin-top: 0.6rem;
  width: 1.8rem;
  height: 1.8rem;
}
.offical{
  margin-top: 0.2rem;
  width: 100%;
  height:4rem;
  background-color:#fff;
}
.header-img{
  float: left;
  width: 4rem;
  height:4rem;
}
.header-img image{
  margin-top: 0.5rem;
  margin-left: 0.5rem;
  width: 3rem;
  height:3rem;
  border-radius: 50%;
}
.header-title{
  float: left;
  width: 80%;
  height: 2.5rem;
  line-height: 3rem;
  font-size: 0.8rem;
}
.header-res{
  float: left;  
  width: 80%;
  height: 1rem;
  font-size: 0.7rem;
}
.small-header{
  display: inline-flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 2.5%;
  width: 95%;
  height: 1.5rem;
  font-size: 0.7rem;
}
.small-header image{
  width: 1.2rem;
  height: 1.2rem;
}
.new-contain{
  width: 100%;
  background-color: #fff;
}
.new-list{
  width: 100%;
  height:4rem;
}
.list-img{
  float: left;
  width: 4rem;
  height:4rem;
}
.list-img image{
  margin-top: 0.5rem;
  margin-left: 0.5rem;
  width: 3rem;
  height:3rem;
  border-radius: 50%;
}
.list-title{
  float: left;
  width: 80%;
  height: 2.5rem;
  line-height: 3rem;
  font-size: 0.8rem;
}
.list-res{
  float: left;  
  width: 80%;
  height: 1rem;
  font-size: 0.7rem;
}
.time{
  float: right;
  padding-right: 0.5rem;
  width: 40%;
  height: 2.5rem;
  text-align: right;
  color: #ccc;
}
.point{
  position: relative;
  left: 3rem;
  top: 1rem;
  width: 0.8rem;
  height: 0.8rem;
  line-height: 0.8rem;
  text-align: center;
  color: #fff;
  background-color: red;
  border-radius: 50%;
  font-size: 0.4rem;
  font-weight: bold;
}