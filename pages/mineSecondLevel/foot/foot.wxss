.container{
  padding: 0;
  margin: 0;
  background-color: #efefef;
}
.me-foot-nav{
  display: inline-flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 3rem;
  background-color: #fff;
}
.me-foot-nav text{
  padding-left: 0.5rem;
  font-size: 1rem;
  color: #8a8a8a;
}
.me-foot-nav image{
  padding-right: 0.5rem;
  width: 1.5rem;
  height: 1.5rem;
}
.me-foot-con{
  margin-top: 0.5rem;
  width: 100%;
  background-color: #fff;
}
.me-foot-con .time{
  padding-left: 0.5rem;
  width: 100%;
  height: 2rem;
  line-height: 2rem;
  font-size: 0.8rem;
  color: #8a8a8a;
}
.me-foot-con .img{
  display: inline-flex;
  align-items: center;
  width: 100%;
  height: 6rem
}
.me-foot-con .img image{
  padding-left: 0.5rem;
  width: 5rem;
  height: 5rem
}
.me-foot-con .money{
  display: inline-flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 3rem;
}
.me-foot-con .money text{
  padding-left: 0.5rem;
  width: 50%;
  height: 3rem;
  line-height: 3rem;
  color: #8a8a8a;
  font-size: 1rem;
}
.me-foot-con .money image{
  padding-right: 0.5rem;
  width: 1rem;
  height: 1rem;
}