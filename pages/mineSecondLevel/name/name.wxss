.container{
  padding: 0;
  margin: 0;
}
.Img{
  display: inline-flex;
  align-items: flex-end;
  justify-content: center;
  width: 100%;
  height: 10rem;
}
.Imges{
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 80%;
  height: 8rem;
  border: 2px dashed #ccc;
  border-radius: 1rem;
}
.Imges image{
  width: 3rem;
  height: 3rem;
}
.nameText{
  width: 100%;
  height: 3rem;
  line-height: 3rem;
  text-align: center;
  color: #8a8a8a;
}
.Text{
  margin-left: 5%;
  width: 90%;
  color: #8a8a8a;
  font-size: 0.8rem;
}
.check{
  display: inline-flex;
  justify-content: flex-end;
  align-items: center;
  width: 100%;
  height: 3rem;
}
.checkbox{
  margin-right: 0.5rem;
  display: inline-flex;
  justify-content: flex-end;
  align-items: center;
  height: 2rem;
  font-size: 0.9rem;
  color: #8a8a8a;
}
.btn{
  width: 100%;
  height: 4rem;
}
.btn button{
  float: right;
  margin-top: 1rem;
  margin-right: 0.5rem;
  width: 4rem;
  height: 2rem;
  line-height: 2rem;
  color: #fff;
  background-color: #837fec;
  font-size: 0.7rem;
}