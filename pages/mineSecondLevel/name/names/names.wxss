.container{
  padding: 0;
  margin: 0;
}
.head{
  width: 100%;
  height: 2rem;
  line-height: 2rem;
  text-align: center;
}
.text{
  width: 100%;
  height: 2rem;
  line-height: 2rem;
  text-align: center;
  color: #8a8a8a;
  font-size: 0.9rem;
}
.text2{
  width: 95%;
  margin-left: 2.5%;
}
.school{
  display: inline-flex;
  align-items: center;
  width: 100%;
  height: 3rem;
}
.schoolText{
  width: 20%;
  text-align: center;
}
.school input{
  padding-left: 0.5rem;
  width: 75%;
  height: 2rem;
  background-color: #efefef;
  border-radius: 0.5rem;
  font-size: 0.8rem;
}
.btn{
  display: flex;
  align-items: center;
  width: 100%;
  height: 4rem;
}
.btn button{
  margin-right: 0.5rem;
  float: right;
  width: 5rem;
  height: 2rem;
  line-height: 2rem;
  font-size: 0.8rem;
  color: #8a8a8a;
}