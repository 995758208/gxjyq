.container{
  padding: 0;
  margin: 0;
  background-color: #efefef;
}
/* tab样式和内容样式 */
.swiper-tab{
    position: absolute;
    width: 100%;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
    height: 2.5rem;
    line-height: 2.5rem;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
    background-color: #fff;
    z-index: 1000;
}
.swiper-tab-item{
    width: 30%; 
    color:#8a8a8a;
}
.active{
    color:#81c2d6;
    border-bottom: 4rpx solid #81c2d6;
}
swiper{
  height: 100vh;
}
swiper-item{
  overflow: scroll;
  padding-top: 2.1rem;
  height: auto;
  background-color: #efefef;
}
.a{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-top: 0.5rem;
  width: 100%;
  height: 8rem;
  background-color: #fff;
}
.a-img{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  width: 30%;
  height: 7rem;
}
.a-img image{
  width: 5rem;
  height: 5rem;
}
.a-msg{
  width: 70%;
  height: 5rem;
}
.a-name{
  padding-left: 0.5rem;
  display: block;
  width: 100%;
  height: 2.5rem;
  line-height: 2.5rem;
  font-size: 1rem;
  overflow:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.a-money{
  padding-left: 0.5rem;
  display: block;
  width: 100%;
  font-size: 0.8rem;
  color: #8a8a8a;
}
.a-userName{
  float: right;
  padding-right: 1rem;
  display: block;
  width: 100%;
  height: 2rem;
  line-height: 2rem;
  font-size: 0.8rem;
  color: #8a8a8a;
  text-align: right;
  overflow:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.c-msg{
  padding-left: 0.5rem;
  display: inline-block;
  width: 90%;
  height: 3rem;
  overflow:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.kong{
  width: 100%;
  height: 2.5rem;
  background-color:  #efefef;
}