.container{
  padding: 0;
  margin: 0;
  background-color: #efefef;
}

.mysell{
  display: inline-flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 3rem;
  background-color: #fff;
}
.mysell text{
  padding-left: 0.5rem;
}
navigator-hover{
  width: 80%;
}
.mysell-icon{
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 3rem;
}
.mysell-icon text{
  font-size: 0.8rem;
  color: #8a8a8a;
}
.mysell image{
  width: 1rem;
  height: 1rem;
}

.sell-list{
  margin-top: 0.5rem;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  width: 100%;
  height: 9rem;
  background-color: #fff;
}
.list-top{
  display: inline-flex;
  justify-content: space-between;
  align-items: center;
  width: 95%;
  height: 2rem;
  line-height: 2rem;
  border-bottom: 1px solid #ccc;
}
.text{
  font-size: 0.8rem;
}
.list-center{
  display: inline-flex;
  align-items: center;
  width: 100%;
  height: 5rem;
}
.list-img{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 25%;
  height: 4rem;
}
.list-img image{
  width: 3.5rem;
  height: 3.5rem;
}
.list-con{
  overflow: hidden;
  width: 50%;
  height: 4rem;
  line-height: 1rem;
  padding: 0.1rem;
  font-size: 0.9rem;
}
.list-msg{
  display: flex;
  flex-wrap: wrap;
  width: 25%;
  height: 4rem;
}
.texts{
  padding-left: 0.2rem;
  color: #8a8a8a;
  font-size: 0.8rem;
  width: 100%;
  height: 2rem;
  line-height: 0.6rem;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: left;
}