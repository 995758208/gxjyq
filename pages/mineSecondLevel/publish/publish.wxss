.container{
  padding: 0;
  margin: 0;
  background-color: #efefef;
}
.line{
  margin-top: 0.5rem;
  width: 100%;
  height: 11.5rem;
  background-color: #fff;
}
.line:nth-of-type(1){
  margin: 0;
}
.wenzi{
  margin-top: 0.5rem;
  margin-left: 2.5%;
  width: 95%;
  height: 2rem;
  line-height: 1.1rem;
  font-size: 0.8rem;
  overflow: hidden;
}
.img{
  margin-top: 1rem;
  display: inline-flex;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  height: 6rem;
}
.img image{
  width: 6rem;
  height: 6rem;
}
.time{
  padding-left: 0.5rem;
  width: 100%;
  height: 2rem;
  line-height: 2rem;
  font-size: 0.8rem;
  color: #ccc;
}