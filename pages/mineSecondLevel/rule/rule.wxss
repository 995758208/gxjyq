.container{
  padding: 0;
  margin: 0;
  background: #efefef;
}
.rules{
  display: inline-flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 2.5rem;
  line-height: 2.5rem;
  background-color: #fff;
  border: 1px solid #efefef;
}
.rules text{
  padding-left: 0.5rem;
  display: inline-flex;
  width: 80%;
  color: #8a8a8a;
}
.rules image{
  padding-right: 0.5rem;
  width: 1.5rem;
  height: 1.5rem;
}