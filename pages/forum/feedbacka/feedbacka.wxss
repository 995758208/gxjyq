#all{
 /* background: #8b87ff;*/
  width: 15rem;
  height: 11rem;
  position:absolute;
  top: 50%;
  left: 50%;
  transform:translate(-50%,-50%);
}
.icon{
  position: absolute;
  background: #837fec;
  height: 2rem;
  width: 2rem;
  border-radius: 50%;
  top: -0.8rem;
  left: 6.5rem;
  border: 2px solid #4640fa;
  z-index: 2;
}
.icon image{
  height: 1rem;
  width: 1rem;
  position:absolute;
  top: 50%;
  left: 50%;
  transform:translate(-50%,-50%);
}
.top{
  display: block;
  height: 0.8rem;
  width: 100%;
  background: #837fec;
  position: absolute;
  top: 0;
}
.confirm, .cencel{
  width: 5rem; 
  height: 2rem; 
  position: absolute; 
  bottom: 1rem;
  border-radius: 0.5rem;
  line-height: 1.7rem;
  font-size: 1rem;
  }

.cencel{
  color: #414141;
  left: 1.7rem;
  background: #c3c3c3;
  border: 4rpx solid #787878;
}
.confirm{
  right: 1.7rem;
  background: #837fec;
  border: 4rpx solid #4640fa;
  color: #fff;
}
.bottom{
  width: 100%;
  display: block;
  height: 0.5rem;
  background: #837fec;
  position: absolute;
  bottom: 0;
  
}
.big{
  position: absolute;
  left: 6.2rem;
  top:2rem;
  color: #837fec;
  font-size: 1.5rem;
  border-bottom: 0.1rem #837fec solid;
}
.small{
  color: #000000;
  position: absolute;
  font-size: 1rem;
  left: 4.5rem;
  bottom: 4.5rem;
}