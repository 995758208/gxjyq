  color: #ccc;
}
.delNews{
  padding-right: 0.5rem;
  display: inline-flex;
  justify-content: flex-end;
  width: 20%;
  height: 1rem;
}
.delNews image{
  width: 1rem;
  height: 1rem;
}
.good{
  display: inline-flex;
  justify-content: space-around;
  width: 100%;
  height: 2rem;
}
.sendNews,.sayNews,.loveNews,.Collection{
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 50%;
  height: 2rem;
  font-size: 0.8rem;
}
.sendNews image{
  margin-right: 0.3rem;
  width: 1rem;
  height: 1.1rem;
}
.sayNews image{
  margin-right: 0.3rem;
  width: 1rem;
  height: 1.1rem;
}
.loveNews image{
  margin-right: 0.3rem;
