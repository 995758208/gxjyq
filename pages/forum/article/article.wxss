/* pages/forum/article/article.wxss */
.container{
  padding: 0;
  margin: 0;
}
.for-nav{
  position: relative;
  width: 100%;
  height: 2rem;
  line-height: 2rem;
  font-size: 1rem;
  text-align: center;
}
.for-modul{
  position: absolute;
  right: 0rem;
  top: 0rem;
  width: 15%;
  height: 2rem;
  line-height: 2rem;
  border: 0;
  outline: 0;
  font-size: 0.8rem;
  color: #888;
}
textarea{
  width: 85%;
  margin: 0.2rem auto;
}
.get-image{
  width: 100%;
}
.get-image image{
  width: 4rem;
  height: 4rem;
  margin-left: 1rem;
}
.position{
  width: 90%;
  height: 3rem;
  line-height: 3rem;
  border-top: 1px solid rgb(196, 196, 196);
  border-bottom: 1px solid rgb(196, 196, 196);
  margin: 0.2rem auto;
}
.position text{
  margin-left: 0.5rem;
}
.button{
  width: 80%;
  height: 60rpx;
  color: #fff;
  margin-top: .5rem;
  line-height: 60rpx;
  margin-left: 10%;
  border-radius:20rpx; 
  text-align: center;
  background-color: #837fec;
}