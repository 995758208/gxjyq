.container{
  padding: 0;
  margin: 0;
}
.for-nav{
  position: relative;
  width: 100%;
  height: 3rem;
  line-height: 3rem;
  font-size: 1rem;
  text-align: center;
}
.for-ruturn{
  position: absolute;
  left: 0rem;
  top: 0rem;
  width: 15%;
  height: 3rem;
}
.for-ruturn image{
  margin-top: 0.5rem;
  margin-left: 0.5rem;
  width: 2rem;
  height: 2rem;
}
.for-modul{
  position: absolute;
  right: 0rem;
  top: 0rem;
  width: 15%;
  height: 3rem;
  border: 0;
  outline: 0;
  background-color: #fff;
}
.for-modul image{
  margin-top: 0.8rem;
  margin-right: 0.8rem;
  width: 1.4rem;
  height: 1.4rem;
}
/* 滚动图样式 */
.banner-img{
  width: 100%;
  display: block;
}
.banner-img {
    width: 100%;
    height: 10rem;
}
swiper-item image {
    height: 100%;
    width: 100%;
    display: inline-block;
    overflow: hidden;
}
/* 内容样式 */
.for-container{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.for-con-top{
  margin-top: 0.5rem;
  display: inline-flex;
  width: 100%;
  height: 4rem;
}
.for-headImg{
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 20%;
  height: 4rem;
}
.for-headImg image{
  width: 3rem;
  height: 3rem;
  border-radius: 50%;
}
.for-text{
  padding-left:0.5rem;
  display: flex;
  flex-wrap: wrap;
  width: 65%;
  height: 4rem;
}
.for-text1{
  width: 70%;
  height: 2rem;
  line-height: 3rem;
  font-size: 0.9rem;
  color: #000;
  /* 设置超过一行显示省略号 */
  display: inline-block; 
	white-space: nowrap;
	overflow: hidden; 
	text-overflow:ellipsis;
}
.for-text2{
  width: 65%;
  height: 1.5rem;
  font-size: 0.7rem;
  color: #8a8a8a;  
}
.for-right{
  padding-right: 0.5rem;
  width: 20%;
  height: 4rem;
  line-height: 4rem;
  font-size: 0.7rem;
  text-align: center;
  color: #8a8a8a;
}
.for-con-center{
  width: 100%;
  height: 100%;
}
.center-title{ 
  padding-top:0.2rem; 
  margin-left: 2.5%;
  width: 95%;
  height: 1.5rem;
  font-size: 0.9rem;
  color: #000;
}
.center-data{
  margin-left: 2.5%;
  width: 95%;
  height: 1.2rem;
  font-size: 0.7rem;
  color: #8a8a8a;
   /* 设置超过一行显示省略号 */
  display: inline-block; 
	white-space: nowrap;
	overflow: hidden; 
	text-overflow:ellipsis;
}
.center-img{
  display: inline-flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  width: 100%;
  height: 100%;
}
.center-imgs{
  margin: 0.1111111111%;
  width: 33%;
  height: 7rem;
}
.center-imgs image{
  width: 100%;
  height: 7rem;
}
.for-con-bottom{
  margin-top: 0.5rem;
  width: 100%;
  height: 4rem;
  border-bottom: 1px #ccc solid;
}
.time{
  display: inline-flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 2rem;
}
.writer{
  width: 25%;
  height: 1rem;
  line-height: 1rem;
  font-size: 0.8rem;
  color: #000;
}
.dataTime{
  width: 70%;
  height: 1rem;
  line-height: 1rem;
  font-size: 0.6rem; 
  color: #ccc;
}
.delNews{
  padding-right: 0.5rem;
  display: inline-flex;
  justify-content: flex-end;
  width: 20%;
  height: 1rem;
}
.delNews image{
  width: 1rem;
  height: 1rem;
}
.good{
  display: inline-flex;
  justify-content: space-around;
  width: 100%;
  height: 2rem;
}
.sendNews,.sayNews,.loveNews{
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 30%;
  height: 2rem;
  font-size: 0.8rem;
}
.sendNews image{
  margin-right: 0.2rem;
  width: 1.1rem;
  height: 1.1rem;
}
.sayNews image{
  margin-right: 0.2rem;
  width: 1.1rem;
  height: 1.1rem;
}
.loveNews image{
  margin-right: 0.2rem;
  width: 1.1rem;
  height: 1.1rem;
}
