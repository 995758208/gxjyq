.container{
  width: 100%;
  padding: 0;
  margin: 0;
}
.banner-img{
  width: 100%;
  display: block;
}
.banner-img {
    width: 100%;
    height: 10rem;
}
swiper-item image {
    height: 100%;
    width: 100%;
    display: inline-block;
    overflow: hidden;
}
.swiper{
  height: 20rem;
}
.image{
  width: 100%;
  height: auto;
}
.image image{
  width: 100%;
  height: auto;
}
.kong{
  width: 100%;
  height: 0.5rem;
  background-color: #efefef;
}
.contant{
  width: 100%;
}
.h1{
  margin-left: 0.5rem;
  margin-top: 0.3rem;
}
.h1 text{
  color: red;
}
.h2{
  margin-left: 0.5rem;
}
.h3{
  margin-left: 0.5rem;
  padding-bottom: 0.3rem;
}
.h3 text{
  font-size: 0.7rem;
  color: rgb(182, 182, 182);
}
/*选项卡*/
.swiper-tab{
  width: 100%;
  /* border-bottom: 2rpx solid #ccc; */
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  color: #ccc;
  font-size: 16px;
}
.swiper-tab-item{
  width: 50%; 
  color:#434343;
}
.active{
  color:#F65959;
   border-bottom: 2rpx solid #F65959; 
  
}
.juzhong{
margin: 0 auto;
}
.domain{
background-color: #fff;
height: 100%;
margin:0 10px;
}
.show{
display: block;
}
.hidden{
display: none;
}
  .footer{
    width: 100%;
    position: fixed;
    bottom: 0px;
    display: flex;
  }
  .footer button{
    width: 50%;
 
    justify-content: center;
  }
 /* 评论样式 */
.comment-container{
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
}
.comment-top{
  margin-top: 0.5rem;
  display: inline-flex;
  width: 100%;
  height: 4rem;
}
.comment-headImg{
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 20%;
  height: 4rem;
}
.comment-headImg image{
  width: 2rem;
  height: 2rem;
  border-radius: 50%;
}
.comment-text{
  padding-left:0.5rem;
  display: flex;
  flex-wrap: wrap;
  width: 65%;
  height: 4rem;
}
.comment-text1{
  width: 70%;
  height: 2rem;
  line-height: 3rem;
  font-size: 0.9rem;
  color: #000;
  /* 设置超过一行显示省略号 */
  display: inline-block; 
	white-space: nowrap;
	overflow: hidden; 
	text-overflow:ellipsis;
}
.comment-text2{
  width: 65%;
  height: 1.5rem;
  font-size: 0.7rem;
  color: #8a8a8a;  
}
.comment-right{
  padding-right: 0.5rem;
  width: 20%;
  height: 4rem;
  line-height: 4rem;
  font-size: 0.7rem;
  text-align: center;
  color: #8a8a8a;
}
scroll-view{
  height: auto;
}
.comment-right image{
  width: 1rem;
  height: 1rem;
}
.comment-con-center{
  width: 100%;
  height: 100%;
}
.comment-data{
  margin-left: 4rem;
  width: 95%;
  height: 1.2rem;
  font-size: 0.7rem;
  color: #8a8a8a;
   /* 设置超过一行显示省略号 */
  display: inline-block; 
	white-space: nowrap;
	overflow: hidden; 
	text-overflow:ellipsis;
}

.time{
  display: inline-flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 2rem;
}
/*输入评论*/
.bottom{
  margin-top: 1rem;
 margin-bottom: 3rem;
  display: inline-flex;
  width: 100%;
  height: 2rem;
  
}
.input{
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 80%;
  height: 2rem;

}
.input input{
  padding-left: 0.5rem;
  width: 85%;
  height: 1.5rem;
  border-bottom: 1px solid #efefef;
  z-index: -1;
}
.bq{
  width: 10%;
  height: 3rem;
}
.bq button{
  width: 4rem;
  height: 1.5rem;
  font-size: 0.7rem;
  line-height: 1.5rem;
}
