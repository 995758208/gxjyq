/* pages/buy/BuyPage/BuyPage.wxss */

.container{
  background: #eee;
  width: 100%;
  padding: 0;
  margin: 0;
}
.header{
  background: #fff;
  margin-top: 0.5rem;
  padding-top: 0.3rem;
  width: 100%;
  height: 7rem;
}
.header-img{
  float: left;
  width: 20%;
  height: 2rem;
}
.header-img image{
  margin-left: 1rem;
  width: 2rem;
  height: 2rem;
  border-radius: 50%;
}
.header-name{
  float: left;
  width: 80%;
  height: 2rem;
  line-height: 2rem;
}
.header-con{
  float: left;
  margin: 0.5rem 1rem;
  width: 90%;
  height: 4rem;
  border-top: 1px solid rgb(187, 187, 187);
  border-bottom: 1px solid rgb(187, 187, 187);
}
.good-img{
  float: left;
  width: 30%;
  height: 3.5rem;
}
.good-img image{
  margin-top: 0.5rem;
  width: 4rem;
  height:3rem;
}
.good-introduction{
  float: left;
  width: 70%;
  margin-top: 0.5rem;
  font-size: 0.7rem;
}
.good-price{
  float: left;
  width: 70%;
  margin-top: 0.5rem;
  color: rgb(253, 9, 9);
}
.title{
  margin-left: 1rem;
  margin-top: 0.2rem;
  font-size: 0.8rem;
  color: rgb(43, 43, 43);
}
.address{
  background: #fff;
}
.ms{
  float: left;
  padding-left: 1rem;
  width: 20%;
  height: 2rem;
  line-height: 3rem;
  font-size: 0.8rem;
}
.nubmer{
  float: left;
  width: 70%;
  height: 2rem;
  border: 1px solid #eee;
  margin-top: 0.5rem;
  font-size: 0.8rem;
}
.radio-group{
  float: left;
  width: 70%;
  height: 2rem;
  margin-top: 1rem;
  font-size: 0.8rem;
}
.pay{
  background: #fff;
  width: 100%;
  height: 3rem;
  line-height: 3rem;
  border-bottom: 1px solid #eee;
  padding-left: 1rem;
}
.bottom{
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 3rem;
  line-height: 3rem;
  border-top: 1px solid #eee;
}
.total{
  width: 50%;
  float: left;
  margin-left: 1rem;
}
.btn{
  float: right;
  margin-right: 1rem;
  margin-top: 0.5rem;
  background: red;
  width: 30%;
  height: 2rem;
  line-height: 2rem;
  bottom: 0px;
  color: #fff;
}